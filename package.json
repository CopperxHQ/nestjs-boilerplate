{
  "name": "nestjs-starter",
  "version": "0.0.1",
  "description": "NestJS Starter",
  "author": "Tarun Mangukiya",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build -c nest-cli.json",
    "start": "nest start",
    "dev": "npm run start:dev",
    "start:dev": "nest start --watch -c nest-cli.json",
    "start:debug": "nest start --debug --watch -c nest-cli.json",
    "start:prod": "node dist/main",
    "command": "node dist/commander",
    "command:dev": "ts-node src/commander",
    "scheduler:dev": "nest start --c nest-cli.scheduler.json --watch",
    "scheduler:debug": "nest start --c nest-cli.scheduler.json --debug --watch",
    "scheduler:prod": "node dist/scheduler",
    "migration:run": "ts-node --project tsconfig.json node_modules/typeorm/cli.js -f ormconfig migration:run",
    "migration:generate": "npm run migration:run && ts-node --project tsconfig.json node_modules/typeorm/cli.js -f ormconfig migration:generate -d src/database/migrations -n",
    "migration:create": "ts-node --project tsconfig.json node_modules/typeorm/cli.js -f ormconfig migration:create -d src/database/migrations -n",
    "migration:revert": "ts-node --project tsconfig.json node_modules/typeorm/cli.js -f ormconfig migration:revert",
    "db:query": "ts-node --project tsconfig.json node_modules/typeorm/cli.js -f ormconfig query",
    "fix": "npm run format && npm run lint",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "format": "prettier --write .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "engines": {
    "node": ">=22",
    "npm": ">=10",
    "yarn": "use npm!"
  },
  "dependencies": {
    "@nestjs/common": "^10.3.2",
    "@nestjs/core": "^10.4.4",
    "@nestjs/platform-express": "^10.4.4",
    "@nestjs/schedule": "^4.1.2",
    "@nestjs/swagger": "^8.1.0",
    "@nestjs/terminus": "^10.2.3",
    "@nestjs/typeorm": "^10.0.2",
    "@types/lodash": "^4.17.13",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^16.4.7",
    "envalid": "^8.0.0",
    "lodash": "^4.17.21",
    "nanoid": "^5.0.9",
    "nest-commander": "^3.15.0",
    "nest-winston": "^1.9.7",
    "nestjs-pino": "^4.1.0",
    "pg": "^8.13.1",
    "pino-pretty": "^13.0.0",
    "reflect-metadata": "^0.2.1",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.20",
    "uuid": "^11.0.3",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.5",
    "@nestjs/schematics": "^10.1.0",
    "@nestjs/testing": "^10.3.2",
    "@swc/cli": "^0.3.9",
    "@swc/core": "^1.4.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.16",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
